<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 표 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rLayout_input_workout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_workoutName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:hint="운동종목"
                android:maxLength="10" />

            <EditText
                android:id="@+id/et_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/tv_kg"
                android:hint="무게"
                android:inputType="number"
                android:maxLength="3" />

            <TextView
                android:id="@+id/tv_kg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@id/et_reps"
                android:gravity="center"
                android:text="Kg"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/et_reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toStartOf="@+id/tv_reps"
                android:hint="반복수"
                android:inputType="number"
                android:maxLength="3" />

            <TextView
                android:id="@+id/tv_reps"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="번"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_input_workout"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="추가"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@android:color/holo_orange_dark"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/listView_workout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/holo_green_dark"
                android:orientation="horizontal" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>